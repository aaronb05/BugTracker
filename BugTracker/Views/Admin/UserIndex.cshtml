@using BugTracker.ViewModels
@using BugTracker.Helpers
@model IEnumerable<UserProfileVM>

@{ 
    var roleHelper = new UserRolesHelper();
}

<h2>UserIndex</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Avatar")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            Full Name
        </th>

        <th>
            @Html.DisplayName("Role")
        </th>
        <th>
            @Html.DisplayName("Projects")
        </th>
    </tr>

    @foreach(var user in Model)
    {
     <tr>
        <td class="avatar">
            <img src="@user.AvatarUrl" class="img-responsive" />
        </td>
        <td>
            @Html.DisplayFor(modelitem => user.Email)
        </td>
        <td>
            @Html.DisplayFor(modelitem => user.FirstName)  @Html.DisplayFor(modelitem => user.LastName)
        </td>
        <td>
             @roleHelper.ListUserRoles(user.Id).FirstOrDefault()
        </td>
         <td>

         </td>
        <td>
            @Html.ActionLink("Manage Role", "ManageUserRole", "Admin", new { userId = user.Id }, null) |
            @Html.ActionLink("Manage Projects", "ManageUserProjects", "Admin", new { userId = user.Id }, null) 
        </td>
     </tr>
    }

</table>


@Html.ActionLink("Back", "Dashboard", "Home")