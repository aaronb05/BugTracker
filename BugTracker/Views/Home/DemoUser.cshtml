<div class="row" style="padding-bottom:50px; margin-top:30px">
    <div class="col-md-12 text-center text-bold">
        <h2>Demo Logins</h2>
    </div>
</div>

<div class="row" style="padding-left:15px; padding-right:15px">
    <div class="col-md-3">
        <section class="panel">
            @using (Html.BeginForm("DemoLogin", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("DemoEmail", "DemoAdminEmail")
                <header class="panel-heading bg-primary">
                    <div class="panel-heading-icon">
                        <a href="#" onclick="$(this).closest('form').submit();"><i class="fa fa-unlock" style="margin-top:25px"></i></a>
                    </div>
                </header>
            }
            <div class="panel-body" style="min-height:250px">
                <h3 class="text-semibold mt-sm text-center">Administrator</h3>
                <p>
                    <ul>
                        <li>
                            Unrestricted access to all Projects and Tickets
                        </li>
                        <li>
                            Assign/Unassign Users to any Role 
                        </li>
                        <li>
                            Create and edit Projects
                        </li>
                    </ul>
                </p>
            </div>
        </section>
    </div>
    <div class="col-md-3">
        <section class="panel">
            @using (Html.BeginForm("DemoLogin", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("DemoEmail", "DemoProjectManagerEmail")
                <header class="panel-heading bg-primary">
                    <div class="panel-heading-icon">
                        <a href="#" onclick="$(this).closest('form').submit();"><i class="fa fa-unlock" style="margin-top:25px"></i></a>
                    </div>
                </header>
            }
            <div class="panel-body" style="min-height:250px">
                <h3 class="text-semibold mt-sm text-center">Project Manager</h3>
                <p>
                    <ul>
                        <li>
                            View all Projects
                        </li>
                        <li>
                            Access and Edit Tickets only associated with Projects that you are Assigned to
                        </li>
                        <li>
                            Assign/Unassign Developers to a Ticket 
                        </li>
                    </ul>
                </p>
            </div>
        </section>
    </div>
    <div class="col-md-3">
        <section class="panel">
            @using (Html.BeginForm("DemoLogin", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("DemoEmail", "DemoDeveloperEmail")
                <header class="panel-heading bg-primary">
                    <div class="panel-heading-icon">
                        <a href="#" onclick="$(this).closest('form').submit();"><i class="fa fa-unlock" style="margin-top:25px"></i></a>
                    </div>
                </header>
            }
            <div class="panel-body" style="min-height:250px">
                <h3 class="text-semibold mt-sm text-center">Developer</h3>
                <p>
                    <ul>
                        <li>
                            Access only Projects and Tickets that you are Assigned to
                        </li>
                        <li>
                            Edit only Tickets that you are Assigned to
                        </li>
                        <li>
                            No Ability to assign Roles
                        </li>
                    </ul>
                </p>
            </div>
        </section>
    </div>
    <div class="col-md-3">
        <section class="panel">
            @using (Html.BeginForm("DemoLogin", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("DemoEmail", "DemoSubmitterEmail")
                <header class="panel-heading bg-primary">
                    <div class="panel-heading-icon">
                        <a href="#" onclick="$(this).closest('form').submit();"><i class="fa fa-unlock" style="margin-top:25px"></i></a>
                    </div>
                </header>
            }
            <div class="panel-body" style="min-height:250px">
                <h3 class="text-semibold mt-sm text-center">Submitter</h3>
                <p>
                    <ul>
                        <li>
                            Access only Projects that you are Assigned to
                        </li>
                        <li>
                            Ability to create a Ticket, but only view Tickets that you created
                        </li>
                        <li>
                            No Ability to assign Roles
                        </li>
                    </ul>
                </p>
            </div>
        </section>
    </div>
</div>

<div class="row" style="padding-top:15px">
    <div class="col-md-12">
        <p class="text-center">
            Return to User Login <a href="@Url.Action("Login","Home")">Here</a>!
        </p>
    </div>
</div>

